<%- include("includes/head") %>
<body class="bg-gray-100 font-sans">
  <header class="bg-white border-b border-gray-200 py-3 px-4 flex justify-between items-center">
    <img src="Street.jpg" alt="Instagram" class="h-6">
  </header>

  <div class="container mx-auto py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="flex items-center p-4">
        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="w-20 h-20 rounded-full mr-4">
        <div>
          <h2 class="text-xl font-bold"><%= user.username %></h2>
          <p class="text-gray-600"><%= user.bio %></p>
        </div>
      </div>

      <div class="grid grid-cols-3 gap-4 p-4">
        <% user.posts.forEach(function(post) { %>
          <div class="post-item bg-gray-200 relative rounded-lg overflow-hidden">
            <img src="<%= post.image %>" alt="Post" class="w-full h-full object-cover rounded-lg">
            <div class="overlay absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-2">
              <p class="text-sm"><%= post.likes %> Likes</p>
              <p class="text-xs"><%= post.caption %></p>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="p-4">
        <h3 class="text-lg font-bold mb-2">Followers</h3>
        <ul class="list-disc list-inside">
          <% user.followers.forEach(function(follower, index) { %>
            <li class="text-gray-600"><%= index + 1 %>. <%= follower %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>
